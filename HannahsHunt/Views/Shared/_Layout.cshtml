@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - HannahsHunt</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-116457185-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-116457185-1');
    </script>

</head>
<body>
    <header class="container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <a class="navbar-brand" href="http://www.discoverhannahs.org/" target="_blank">
                <img src="~/images/logo-white.png" id="logo" class="mr-2" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item d-inline-block"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item d-inline-block"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li class="nav-item d-inline-block"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Administrator"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="AdminDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Admin
                            </a>
                            <div class="dropdown-menu bg-secondary p-2" aria-labelledby="AdminDropdown">
                                <a class="nav-link text-white" asp-area="" asp-controller="Users" asp-action="Index">Manage Users</a>
                                <div class="dropdown-divider"></div>
                                <a class="nav-link text-white" asp-area="" asp-controller="Hunts" asp-action="Manage">Manage Hunts</a>
                            </div>
                        </li>
                        <li class="nav-item d-inline-block"></li>
                    }
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </nav>
    </header>

    <div id="Jumbotron" class="jumbotron jumbotron-fluid p-0 mb-md-4">
        @RenderSection("jumbotron", required: false)
    </div>
    <div id="MainContent" class="container">
        @RenderBody()
    </div>
    <footer class="bg-dark text-light p-3 mt-5 mr-0 ml-0 row">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark col-md-8">
            <ul class="navbar-nav">
                <li class="nav-item d-inline-block">
                    <a class="nav-link p-2 d-inline-flex" href="https://facebook.com/discoverhannahs" target="_blank">
                        <span class="fab fa-facebook"></span>
                    </a>
                    <a class="nav-link p-2 d-inline-flex" href="https://twitter.com/discoverhannahs" target="_blank">
                        <span class="fab fa-twitter"></span>
                    </a>
                    <a class="nav-link p-2 d-inline-flex" href="https://www.youtube.com/channel/UCWFTz74y4r7mnqOEDfSarJA" target="_blank">
                        <span class="fab fa-youtube"></span>
                    </a>
                </li>
            </ul>
        </nav>
        <span class="text-right col-md-4 text nav-link"><span class="fas fa-copyright"></span> 2018 - HannahsHunt</span>
    </footer>
    <environment include="Development">
        <script src="~/js/jQuery/jquery.slim.js" asp-append-version="true"></script>
        <script src="~/js/bootstrap/bootstrap.min.js" asp-append-version="true"></script>
        <script src="~/js/moment/moment.js" asp-append-version="true"></script>
        <script src="~/js/font-awesome/fontawesome-all.js" asp-append-version="true"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/jQuery/jquery.slim.min.js" asp-append-version="true"></script>
        <script src="~/js/bootstrap/bootstrap.min.js" asp-append-version="true"></script>
        <script src="~/js/moment/moment.js" asp-append-version="true"></script>
        <script src="~/js/font-awesome/fontawesome-all.js" asp-append-version="true"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
