@using Microsoft.AspNetCore.Identity
@using HannahsHunt.Models

@inject SignInManager<ApplicationUser> SignInManager
@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar">
        <ul class="navbar-nav mr-2 mt-2 mt-lg-0">
            <li class="nav-item d-inline-block">
                <a asp-area="" class="nav-link" asp-controller="Manage" asp-action="Index" title="Manage">Your Account</a>
            </li>
            <li class="nav-item d-inline-block">
                <button type="submit" class="btn btn-outline-primary navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav mr-2 mt-2 mt-lg-0">
        <li class="nav-item d-inline-block"><a asp-area="" class="nav-link btn btn-secondary" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
